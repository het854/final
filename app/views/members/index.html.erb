<h2>SEA MBA MEMBERS</h2>

<p>
  <!-- put search box here -->
</p>

<!-- View rendered will be the index view of our member resource -->
  <%= form_tag(members_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Members" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <%= submit_tag "Search", :name => nil %>
     <!-- <button class="btn" type="submit"><i class="icon-search"></i></button>  -->
    </div>
  <% end %>
  <%= yield %>


<table id="members">
  <tr>
    <th>First Name</th>  
    <th>Last Name</th>  
    <th>Business School</th>  
    <th>Nationality</th>  
    <th>Year of Graduation</th>  

  </tr>
<% @members.each do |member| %>
  <tr>
    <td><%= member.first_name %></td>
    <td><%= member.last_name %></td>
    <td><%= member.bschool.name %></td>
    <td><%= member.country.name %></td>
    <td><%= member.year_of_graduation %></td>
    <td><%= link_to " | Show | ", member_path(member) %> </td>

    <% if current_user.admin %>
       <td><%= link_to "  Edit | ", edit_member_path(member) %> </td>    
       <td><%= link_to "  Delete | ", member_path(member), method: :delete, data: { confirm: 'Are you sure?' }  %> </td>

       <% end %>
  </tr>
<% end %>
</table>

