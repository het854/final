<h2>SEA MBA MEMBERS</h2>

<!-- Search member by first and last names  -->
  <%= form_tag(members_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append ">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Members by first or last names" %>
      <%= submit_tag "Search", :name => nil %>
     
    </div>


  <% end %>
  <%= yield %>

<table id="members">
  <tr>
    <th>First Name</th>  
    <th>Last Name</th>  
    <th>Business School</th>  
    <th>Nationality</th>  
    <th>Class of</th>  
 

  </tr>
<% @members.each do |member| %>
  <tr>
    <td><%= member.first_name  %></td>
    <td><%= member.last_name %></td>
    <td><%= member.bschool.name %></td>
    <td><%= member.country.name %></td>
    <td><%= member.year_of_graduation %></td>

    <td><%= link_to " | Show | ", member_path(member) %> </td>

    <% if current_user.admin %>
       <td><%= link_to "  Edit | ", edit_member_path(member) %> </td>    
       <td><%= link_to "  Delete | ", member_path(member), method: :delete, data: { confirm: 'Are you sure?' }  %> </td>

       <% end %>
  </tr>
<% end %>
</table>

